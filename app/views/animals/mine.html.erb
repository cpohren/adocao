<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing">

  <!-- Three columns of text below the carousel -->
  <div class="row">
  <%= render 'search_menu' %>
    <div class="col-md-10">
      <% @animals.each do |animal| %>        
        <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img alt="100%x200" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;" src="<%= url_for(animal.files.first.variant(combine_options: { resize: "275x200^", extent: "275x200", background: "grey", gravity: "center"})) %>"
            data-holder-rendered="true">
          <div class="caption">
            <h3><%= animal.name %></h3>
            <p><%= animal.description %></p>
            <p class="text-center">
              <a href="<%= animal_path(animal) %>" class="btn btn-info" role="button">Visualizar</a>
              <a href="<%= edit_animal_path(animal) %>" class="btn btn-success" role="button">Editar</a>
            </p>
          </div>
        </div>
      </div>
      <% end %>
     

    </div>

  </div>
  <!-- /.row -->


 
</div>
<!-- /.container -->