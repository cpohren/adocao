<%= simple_form_for @animal, defaults: { input_html: { class: 'form-horizontal' } } do |f| %>
  <%= f.input :name %>
  <%= f.input :kind %>
  <%= f.input :breed %>
  <%= f.input :gender %>
  <%= f.input :birth %>
  <%= f.input :size %>
  <%= f.input :neutered %>
  <%= f.input :vaccinated %>  
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
