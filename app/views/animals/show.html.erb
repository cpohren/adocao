<div class="container">
  <div class="row-fluid">
    <div class="col-lg-8">
      <!-- 2. Add images to <div class="fotorama"></div>. -->
      <style>
        .fotorama1522617869150 .fotorama__nav--thumbs .fotorama__nav__frame {
          padding: 2px;
          height: 64px
        }

        .fotorama1522617869150 .fotorama__thumb-border {
          height: 60px;
          border-width: 2px;
          margin-top: 2px
        }
      </style>
      <div class="fotorama" data-nav="thumbs" data-width="100%" data-ratio="800/600" data-thumb-height "46">
        <% @animal.files.each do |file| %>
          <a href="<%= file.filename %>">
            <img src="<%= url_for(file.variant(combine_options: { resize: "730x410^", extent: "730x410", background: "grey", gravity: "center"})) %>">
          </a>
        <% end %>
      </div>
      
      <div class="row-fluid property-info">
        <h4>
          <%= @animal.name %>
        </h4>

        <p class="description">
          <%= @animal.description %>
        </p>       
      </div>
      <!-- end about property -->
    </div>
    <!-- end span8 -->


    <div class="col-lg-4 col-md-4">
      <!--key features-->
      <h4>Características do animal:</h4>
      <div class="property-info">
        <ul class="property-info">
          <li>
            <strong>Nome:</strong>
            <%= @animal.name %>
          </li>
          <li>
            <strong>Tipo:</strong>
            <%= t("showpage.kind.#{@animal.kind}") %>
          </li>
          <li>
            <strong>Raça:</strong>
            <%= @animal.breed %>
          </li>
          <li>
            <strong>Sexo:</strong>
            <%= t("showpage.gender.#{@animal.gender}") %>
          </li>
          <li>
            <strong>Idade:</strong>
            <%= @animal.birth %>
          </li>
          <li>
            <strong>Tamanho:</strong>
            <%= t("showpage.size.#{@animal.size}") %>
          </li>
          <li>
            <strong>Castrado:</strong>
            <%= t("showpage.#{@animal.neutered}") %>
          </li>
          <li>
            <strong>Vacinado:</strong>
            <%= t("showpage.#{@animal.vaccinated}") %>
          </li>
        </ul>

        <!--divider-->
        <!-- <div class="divider"></div> -->

        <!--single map-->
        <!-- <h4>Localização:</h4>
                <div id="map_canvas"></div> -->
        <br>
        <!--divider-->
        <div class="divider"></div>
        <!-- contact agent form -->
        <div id="message"></div>
        <form role="form" method="post" action="<%= contact_animals_path %>" id="contactform" autocomplete="off">
          <h3>Contato sobre este animal:</h3>
          <input class="form-control"  type="hidden" name="animal_id" value=<%= @animal.id %>>
          <div class="form-group">
            <input class="form-control" placeholder="Nome" name="name_contact" type="text">
          </div>

          <div class="form-group">
            <input class="form-control"  type="email" placeholder="Email" name="email_contact" type="text">
          </div>

          <div class="form-group">
            <input class="form-control" placeholder="Telefone" name="phone_contact" type="text">
          </div>

          <div class="form-group">
            <textarea class="form-control" rows="6" placeholder="Mensagem" name="message_contact" ></textarea>
          </div>
          <div class="row">
            <div class="col-xs-6 col-md-6">
              <input type="submit" value="Enviar" class="btn btn-success btn-block btn-lg" tabindex="7">
            </div>
          </div>
        </form>

        <!-- end contact agent form -->
      </div>

    </div>
    <!-- end row-fluid -->

  </div>
  <!-- /.row -->





</div>
<!-- /.container -->