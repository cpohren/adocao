      <!-- about property -->
      <div class="row-fluid property-info">
        <h4><%= @animal.name %></h4>

        <p class="description">
        <%= @animal.description %>
        </p>
        <h5>Files</h5>
 
<ul>
 <% @animal.files.each do |file| %>
    <li><%= link_to file.filename, url_for(file) %></li>
 <% end %>
</ul>
<h4 class="progress" style="display: none">Fazendo upload <span class="progress_count"></span>% concluido</h4>
<%= form_with model: @animal, url: animal_file_uploads_path(@animal),
              method: :post, id: "upload_file", local: true do |f| %>
  <%= f.file_field :files, multiple: true, direct_upload: true %><br />
  <%= f.submit 'Clique para fazer upload' %>
<% end %>
      </div>
      <!-- end about property -->
    </div>
    <!-- end span8 -->

    <div class="col-lg-4 col-md-4">
      <!--key features-->
      <h4>Características do animal:</h4>
      <div class="property-info">
        <ul class="property-info">
          <li>
            <strong>Nome:</strong> <%= @animal.name %></li>
          <li>
            <strong>Tipo:</strong> <%= @animal.kind %></li>  
          <li>
            <strong>Raça:</strong> <%= @animal.breed %></li>
          <li>
            <strong>Sexo:</strong> <%= @animal.gender %></li>  
          <li>
            <strong>Idade:</strong> <%= @animal.birth %></li>
          <li>
            <strong>Tamanho:</strong> <%= @animal.size %> </li>
          <li>
            <strong>Castrado:</strong> <%= @animal.neutered %></li> 
          <li>
            <strong>Vacinado:</strong> <%= @animal.vaccinated %></li>     
        </ul>

        <!--divider-->
        <!-- <div class="divider"></div> -->

        <!--single map-->
        <!-- <h4>Localização:</h4>
                <div id="map_canvas"></div> -->
        <br>
        <!--divider-->
        <div class="divider"></div>
        <!-- contact agent form -->
        <div id="message"></div>
        <form role="form">
          <h3>Contato sobre este animal:</h3>
          <div class="form-group">
            <input class="form-control" placeholder="Nome" name="fullname" type="text">
          </div>

          <div class="form-group">
            <input class="form-control" placeholder="Email" name="fullname" type="text">
          </div>

          <div class="form-group">
            <input class="form-control" placeholder="Telefone" name="fullname" type="text">
          </div>

          <div class="form-group">
            <textarea class="form-control" rows="6" placeholder="Mensagem"></textarea>
          </div>
          <div class="row">
            <div class="col-xs-6 col-md-6">
              <input type="submit" value="Enviar" class="btn btn-success btn-block btn-lg" tabindex="7">
            </div>
          </div>
        </form>
        <!-- end contact agent form -->
      </div>

    </div>
